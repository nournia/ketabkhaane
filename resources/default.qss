/* Buttons */

QDialogButtonBox {
    dialogbuttonbox-buttons-have-icons: 1;
    dialog-ok-icon: url(:/images/ok.png);
    dialog-cancel-icon: url(:/images/cancel.png);
}

QPushButton {
	qproperty-layoutDirection: LeftToRight;
	height: 16px;
}
QPushButton[flat="true"] {
	icon-size: 14px;
}
